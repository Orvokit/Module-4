/* Напишите программу, которая выводит меню бизнес-ланча ресторана, в зависимости от дня недели.

В меню есть общая часть, а есть уникальная часть, которая зависит от дня недели. Пользователь должен ввести номер дня недели, от 1 (понедельник) до 7 (воскресенье), а программа должна вывести на экран день недели и меню этого дня. */

package main

import (
	"fmt"
)

func main() {
	fmt.Println("Введите день недели, где")
  fmt.Println("1 - понедельник")
  fmt.Println("2 - вторник")
  fmt.Println("3 - среда")
  fmt.Println("4 четверг")
  fmt.Println("5 - пятница")
  fmt.Println("6 - суббота")
  fmt.Println("7 - воскресенье")
  var day int
  fmt.Scan(&day)

  if day < 1 || day > 7 {
    fmt.Print("Вы ввели неверный день недели, такого нет, проверьте список.")
  } else if day == 1 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Стейк 500 рублей")
  } else if day == 2 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Яйца пашот 50 рублей")
  } else if day == 3 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Тофу скрэмбл 250 рублей")
  } else if day == 4 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Чизкейк 300 рублей")
  } else if day == 5 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Боул 450 рублей")
  } else if day == 6 {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Горячие роллы пальчики оближешь 600 рублей")
  } else {
    fmt.Println("Вот меню:")
    fmt.Println("Яичница 250 рублей")
    fmt.Println("Салатик 100 рублей")
    fmt.Println("Блюдо дня: Оладушки 100 рублей")
  } 
}
